@model IEnumerable<IoTBay.Models.Entities.Shipment>

@{
    ViewData["Title"] = "Shipment Management";
}

<div class="container mt-4">
    <h1>Shipment Management</h1>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col">
                            <h5>Search Shipments</h5>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="get" class="row g-3">
                        <div class="col-md-5">
                            <div class="input-group">
                                <span class="input-group-text">Shipping Method</span>
                                <input type="text" class="form-control" name="SearchTerm" placeholder="Enter shipping method">
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="input-group">
                                <span class="input-group-text">Shipping Date</span>
                                <input type="date" class="form-control" name="SearchDate">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-secondary w-100">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    No shipments found.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Order ID</th>
                                <th>Shipping Method</th>
                                <th>Shipping Date</th>
                                <th>Delivery Address</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.OrderId</td>
                                    <td>@item.ShippingMethod</td>
                                    <td>@item.ShippingDate.ToString("yyyy-MM-dd")</td>
                                    <td>@item.DeliveryAddress</td>
                                    <td>
                                        @switch (item.Status)
                                        {
                                            case "pending":
                                                <span class="badge bg-warning text-dark">Pending</span>
                                                break;
                                            case "shipped":
                                                <span class="badge bg-primary">Shipped</span>
                                                break;
                                            case "delivered":
                                                <span class="badge bg-success">Delivered</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@item.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (item.Status == "pending")
                                        {
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@item.ShipmentId" class="btn btn-sm btn-primary">Edit</a>
                                                <form asp-action="Delete" asp-route-id="@item.ShipmentId" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this shipment?')">Delete</button>
                                                </form>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div> 