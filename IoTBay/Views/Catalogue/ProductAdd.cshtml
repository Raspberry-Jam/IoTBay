@model IoTBay.Models.Views.ProductAddViewModel
@{
    ViewBag.Title = "Product Add Page";
    Layout = "_Layout";
}

<div class="text-center">
    <h1>Add Product to the Catalogue</h1>

    <!-- Disable client-side validation by adding novalidate -->
    <form asp-action="ProductAdd" method="post" novalidate>
        @Html.AntiForgeryToken()

        <h3>Product Specifications</h3>

        <!-- Summary for model-level errors (e.g., from Validate()) -->
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Product Name -->
        <input asp-for="Name" type="text" placeholder="Product Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
        <br />

        <!-- Category Dropdown -->
        <input list="categoryList" asp-for="Category" placeholder="Category" class="form-control" required />
        <datalist id="categoryList">
            @foreach (var category in Model.ProductCategories)
            {
                <option value="@category.Text"></option>
            }
        </datalist>
        <span asp-validation-for="Category" class="text-danger"></span>
        <br />

        <!-- Price -->
        <input asp-for="Price" type="number" step="0.01" placeholder="Enter Price" class="form-control" required />
        <span asp-validation-for="Price" class="text-danger"></span>
        <br />

        <!-- Short Description -->
        <input asp-for="ShortDescription" type="text" placeholder="Short Description" class="form-control" required />
        <span asp-validation-for="ShortDescription" class="text-danger"></span>
        <br />

        <!-- Full Description -->
        <textarea asp-for="FullDescription" placeholder="Full Description" class="form-control" required></textarea>
        <span asp-validation-for="FullDescription" class="text-danger"></span>
        <br />

        <!-- Buttons -->
        <button type="button" onclick="location.href='@Url.Action("Index", "Home")'">Home</button>
        <div></div>
        <button type="reset">Clear</button>
        <div></div>
        <button type="submit">Add</button>
    </form>
</div>
